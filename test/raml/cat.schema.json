{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Cat",
  "id": "cat.schema.json",
  "description": "A cat from Atoms catalog",
  "type": "object",
  "properties": {
    "id": {
      "description": "The unique identifier for a cat",
      "type": "integer"
    },
    "name": {
      "description": "Name of the cat",
      "type": "string"
    },
    "ownerName":{
      "description": "Name of the owner",
      "type": "string"
    },
    "toy":{
      "description": "Something to play",
      "type": "object"
    },
    "food":{
      "description": "Something to eat",
      "type": "object",
      "properties" : {
        "name":{
          "description": "what the cat eats",
          "type": "string"
        }
      }
    },
    "errors":{
        "title": "Errors",
        "description": "Errores al procesar la petici√≥n",
      "type": "array",
      "items": { "$ref": "error.schema.json" }
    }
  },
  "required": ["id", "name", "errors"]
}
